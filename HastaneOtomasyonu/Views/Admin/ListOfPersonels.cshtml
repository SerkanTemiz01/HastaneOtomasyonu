@model IEnumerable<Hastane.Business.Models.VMs.ListOfPersonelVM>

@{
    ViewData["Title"] = "ListOfPersonels";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>ListOfPersonels</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
      
            <th>
               Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Email Adress
            </th>
      
            <th>
                Salary
            </th>
            <th>Role</th>
            <th>Function</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
              @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.EmailAddress
            </td>
         
            <td>
                @item.Salary
            </td>
            <td>
                @item.Roles
            </td>
           <td>
                <a asp-action="UpdatePersonel" asp-route-id="@item.ID" class="btn btn-success">Update</a>
                <a class="btn btn-danger" asp-action="DeletePersonel" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
